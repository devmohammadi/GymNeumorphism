<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/_15mdp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/_15mdp" />

            <TextView
                android:id="@+id/tvProgram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10mdp"
                android:text="@string/program"
                android:textColor="@color/black"
                android:textSize="@dimen/_26font_mdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/guidelineLeft"
                app:layout_constraintTop_toTopOf="parent" />

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/cvArm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20mdp"
                app:neumorph_backgroundColor="@color/background"
                app:neumorph_shadowColorDark="@color/backgroundDark"
                app:neumorph_shadowColorLight="@color/shadow_light"
                app:neumorph_shadowElevation="@dimen/_5mdp"
                app:neumorph_shapeAppearance="@style/NeumorphismCard"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_32mdp"
                        android:layout_height="@dimen/_32mdp"
                        android:src="@drawable/arm_training"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:fontFamily="@font/actor"
                        android:text="@string/arm_training"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12font_mdp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:fontFamily="@font/actor"
                        android:text="In Progress ..."
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/_10font_mdp" />


                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/cvWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20mdp"
                app:neumorph_backgroundColor="@color/background"
                app:neumorph_shadowColorDark="@color/backgroundDark"
                app:neumorph_shadowColorLight="@color/shadow_light"
                app:neumorph_shadowElevation="@dimen/_5mdp"
                app:neumorph_shapeAppearance="@style/NeumorphismCard"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_32mdp"
                        android:layout_height="@dimen/_32mdp"
                        android:src="@drawable/dumbbell"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:fontFamily="@font/actor"
                        android:text="@string/weight_training"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12font_mdp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:fontFamily="@font/actor"
                        android:text="@string/haveFinished"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/_10font_mdp" />


                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/cvRun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20mdp"
                app:neumorph_backgroundColor="@color/background"
                app:neumorph_shadowColorDark="@color/backgroundDark"
                app:neumorph_shadowColorLight="@color/shadow_light"
                app:neumorph_shadowElevation="@dimen/_5mdp"
                app:neumorph_shapeAppearance="@style/NeumorphismCard"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_32mdp"
                        android:layout_height="@dimen/_32mdp"
                        android:src="@drawable/run"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:fontFamily="@font/actor"
                        android:text="@string/run_training"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12font_mdp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:fontFamily="@font/actor"
                        android:text="@string/in_progress"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/_10font_mdp" />


                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/cvYoga"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20mdp"
                app:neumorph_backgroundColor="@color/background"
                app:neumorph_shadowColorDark="@color/backgroundDark"
                app:neumorph_shadowColorLight="@color/shadow_light"
                app:neumorph_shadowElevation="@dimen/_5mdp"
                app:neumorph_shapeAppearance="@style/NeumorphismCard"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_32mdp"
                        android:layout_height="@dimen/_32mdp"
                        android:src="@drawable/yoga"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:fontFamily="@font/actor"
                        android:text="@string/yoga_training"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12font_mdp"
                        android:textStyle="bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:fontFamily="@font/actor"
                        android:text="@string/noTask"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/_10font_mdp" />


                </LinearLayout>

            </soup.neumorphism.NeumorphCardView>

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flowDashboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10mdp"
                app:constraint_referenced_ids="cvArm,cvWeight,cvRun,cvYoga"
                app:flow_horizontalGap="@dimen/_3mdp"
                app:flow_maxElementsWrap="2"
                app:flow_verticalGap="@dimen/_3mdp"
                app:flow_wrapMode="aligned"
                app:layout_constraintEnd_toEndOf="@id/guidelineRight"
                app:layout_constraintStart_toStartOf="@id/guidelineLeft"
                app:layout_constraintTop_toBottomOf="@id/tvProgram" />

            <TextView
                android:id="@+id/tvCourseCollection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10mdp"
                android:fontFamily="@font/actor"
                android:text="@string/course_collection"
                android:textColor="@color/black"
                android:textSize="@dimen/_22font_mdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/guidelineLeft"
                app:layout_constraintTop_toBottomOf="@id/flowDashboard" />

            <soup.neumorphism.NeumorphCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5mdp"
                app:layout_constraintEnd_toEndOf="@id/guidelineRight"
                app:layout_constraintStart_toStartOf="@id/guidelineLeft"
                app:layout_constraintTop_toBottomOf="@id/tvCourseCollection"
                app:neumorph_backgroundColor="@color/background"
                app:neumorph_shadowColorDark="@color/shadow_dark"
                app:neumorph_shadowColorLight="@color/shadow_light"
                app:neumorph_shadowElevation="@dimen/_5mdp"
                app:neumorph_shapeAppearance="@style/NeumorphismCard">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/ivFitness"
                        android:layout_width="@dimen/_60mdp"
                        android:layout_height="@dimen/_60mdp"
                        android:layout_margin="@dimen/_8mdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fitness"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:riv_corner_radius="@dimen/_8mdp" />


                    <TextView
                        android:id="@+id/tvCourseAttended"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8mdp"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:fontFamily="@font/actor"
                        android:text="@string/course_attended"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14font_mdp"
                        app:layout_constraintStart_toEndOf="@id/ivFitness"
                        app:layout_constraintTop_toTopOf="@id/ivFitness" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8mdp"
                        android:layout_marginTop="@dimen/_10mdp"
                        android:fontFamily="@font/actor"
                        android:text="@string/_11_courses_in_media"
                        android:textSize="@dimen/_10font_mdp"
                        app:layout_constraintBottom_toBottomOf="@id/ivFitness"
                        app:layout_constraintStart_toEndOf="@id/ivFitness"
                        app:layout_constraintTop_toTopOf="@id/tvCourseAttended" />


                    <soup.neumorphism.NeumorphCardView
                        android:layout_width="@dimen/_42mdp"
                        android:layout_height="@dimen/_42mdp"
                        android:layout_margin="@dimen/_8mdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:neumorph_backgroundColor="@color/background"
                        app:neumorph_shadowColorDark="@color/shadow_dark"
                        app:neumorph_shadowColorLight="@color/shadow_light"
                        app:neumorph_shadowElevation="@dimen/_3mdp"
                        app:neumorph_shapeType="basin">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_7mdp"
                            android:src="@drawable/right"
                            app:tint="@color/primary" />

                    </soup.neumorphism.NeumorphCardView>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </soup.neumorphism.NeumorphCardView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_8mdp"
        android:background="@drawable/shadow_light"
        app:layout_constraintBottom_toTopOf="@id/bottomMenu" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/cvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8mdp"
            app:neumorph_backgroundColor="@color/background"
            app:neumorph_shadowColorDark="@color/shadow_dark"
            app:neumorph_shadowColorLight="@color/shadow_light"
            app:neumorph_shadowElevation="@dimen/_5mdp"
            app:neumorph_shapeAppearance="@style/NeumorphismCard"
            app:neumorph_shapeType="pressed"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_margin="@dimen/_8mdp"
                android:padding="@dimen/_3mdp"
                android:src="@drawable/home"
                app:tint="@color/primary" />

        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/cvChart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8mdp"
            app:neumorph_backgroundColor="@color/background"
            app:neumorph_shadowColorDark="@color/shadow_dark"
            app:neumorph_shadowColorLight="@color/shadow_light"
            app:neumorph_shadowElevation="@dimen/_5mdp"
            app:neumorph_shapeAppearance="@style/NeumorphismCard"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_margin="@dimen/_8mdp"
                android:padding="@dimen/_3mdp"
                android:src="@drawable/chart" />

        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/cvBell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8mdp"
            app:neumorph_backgroundColor="@color/background"
            app:neumorph_shadowColorDark="@color/shadow_dark"
            app:neumorph_shadowColorLight="@color/shadow_light"
            app:neumorph_shadowElevation="@dimen/_5mdp"
            app:neumorph_shapeAppearance="@style/NeumorphismCard"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_margin="@dimen/_8mdp"
                android:padding="@dimen/_3mdp"
                android:src="@drawable/bell" />

        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/cvUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8mdp"
            app:neumorph_backgroundColor="@color/background"
            app:neumorph_shadowColorDark="@color/shadow_dark"
            app:neumorph_shadowColorLight="@color/shadow_light"
            app:neumorph_shadowElevation="@dimen/_5mdp"
            app:neumorph_shapeAppearance="@style/NeumorphismCard"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_margin="@dimen/_8mdp"
                android:padding="@dimen/_3mdp"
                android:src="@drawable/user" />

        </soup.neumorphism.NeumorphCardView>

        <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:constraint_referenced_ids="cvHome,cvChart,cvBell,cvUser" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>